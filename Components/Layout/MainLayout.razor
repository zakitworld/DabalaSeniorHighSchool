                </div>
                <div class="nav-links">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <i class="fas fa-home"></i>
                        Home
                    </NavLink>
                    <NavLink class="nav-link" href="about">
                        About Us
                    </NavLink>
                    <NavLink class="nav-link" href="admission">
                        Admission
                    </NavLink>
                    <NavLink class="nav-link" href="contacts">
                        Contacts
                    </NavLink>
                    <NavLink class="nav-link" href="pta">
                        PTA
                    </NavLink>
                    <NavLink class="nav-link" href="student-life">
                        Student Life
                    </NavLink>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="main-content">
        @Body
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-section">
                    <h3>Contact Information</h3>
                    <p><i class="fas fa-phone"></i> (+233) 0540306405</p>
                    <p><i class="fas fa-envelope"></i> dabalaseniorhigh@gmail.com</p>
                    <p><i class="fas fa-map-marker-alt"></i> Box TS 33, Dabala</p>
                </div>
                <div class="footer-section">
                    <h3>Visiting Hours</h3>
                    <p>Second Saturdays: 9:00AM - 4:00PM</p>
                    <p>Second Sundays: 9:00AM - 4:00PM</p>
                </div>
                <div class="footer-section">
                    <h3>Quick Links</h3>
                    <a href="admission">Admission</a>
                    <a href="about">About Us</a>
                    <a href="contacts">Contact</a>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2024 Dabala Senior High School. All rights reserved.</p>
            </div>
