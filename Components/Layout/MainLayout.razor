    <!-- Main Navigation -->
    <nav class="main-nav">
        <div class="container">
            <div class="nav-content">
                <div class="logo-section">
                    <div class="school-logo">
                        <div class="logo-circle">
                            <div class="logo-text">
                                <div class="school-name">DABALA SENIOR HIGH SCHOOL</div>
                                <div class="location">DABALA</div>
                                <div class="founded">FOUNDED 1963</div>
                                <div class="motto">TRUTH, LOVE & RESPONSIBILITY</div>
                            </div>
                        </div>
